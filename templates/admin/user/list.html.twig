{% extends "layout/base_admin_layout.html.twig" %}

{% block content %}

    <div class="head-list flex flex-row justify-between mb-10">
        <h1 class="text-3xl font-bold underline">Liste Utilisateurs</h1> 

        <button type="button" class="float-left text-xl text-white bg-blue-700 hover:bg-blue-800 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700">
            <a href="{{ path('admin_user_new') }}">Créer un utilisateur</a>
        </button>
    </div>

    <table class="table-auto w-full">
        <thead>
            <tr>
                <th class="p-2.5">Id</th>
                <th class="p-2.5">Prénom</th>
                <th class="p-2.5">Nom</th>
                <th class="p-2.5">Email</th>
                <th class="p-2.5">Pays</th>
                <th class="p-2.5"></th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                <tr>
                    <td class="border border-slate-700 p-2.5 dark:border-gray-700 text-center">{{ user.id }}</td>
                    <td class="border border-slate-700 p-2.5 dark:border-gray-700 text-center">{{ user.firstname }}</td>
                    <td class="border border-slate-700 p-2.5 dark:border-gray-700 text-center">{{ user.lastname }}</td>
                    <td class="border border-slate-700 p-2.5 dark:border-gray-700 text-center">{{ user.email }}</td>
                    <td class="border border-slate-700 p-2.5 dark:border-gray-700 text-center">{{ user.country }}</td>
                    <td class="text-left pl-5">
                        <button type="button" class="text-white bg-gray-800 hover:bg-gray-900 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-gray-800 dark:hover:bg-gray-700 dark:border-gray-700">
                            <a href="{{ path('admin_user_update', {id: user.id}) }}">Modifier</a> 
                        </button>
                        <button type="button" class="text-white bg-red-700 hover:bg-red-800 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-red-600 dark:hover:bg-red-700">
                            <a href="{{ path('admin_user_delete', {id: user.id}) }}">Supprimer</a>
                        </button>   
                    <td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}