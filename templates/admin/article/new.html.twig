{% extends "layout/base_admin_layout.html.twig" %}

{% block content %}

    <h1 class="text-xl text-center font-bold underline">New article</h1>

    {{ form_start(form) }}

        <div>

          <div class="flex flex-col py-5">
               {{ form_label(form.title, null, { 'label_attr': { 'class': 'text-lg font-bold'} }) }}
               {{ form_widget(form.title, {'attr': {'class': 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg block w-full p-2.5'} }) }}

               <div class="flex flex-col pt-10">
                    {{ form_label(form.tags, null, { 'label_attr': { 'class': 'text-lg font-bold'} }) }}
                    {{ form_widget(form.tags, {'attr': {'class': 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg block w-full p-2.5'} }) }}
               </div>
          </div>

          <div class="flex flex-col py-5">
               {{ form_label(form.content, null, { 'label_attr': { 'class': 'text-lg font-bold'} }) }}
               {{ form_widget(form.content, {'attr': {'class': 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg block w-full p-2.5'} }) }}
          </div>

          <div class="py-5">
               {{ form_widget(form.save, { 'attr': {'class': 'text-white font-bold text-lg bg-green-700 rounded-lg text-sm px-5 py-2.5 me-2 mb-2 py-5'} }) }}
          </div>

        </div>

    {{ form_end(form) }}

{% endblock %}