{% extends "layout/base_admin_layout.html.twig" %}

{% block content %}

    <div class="head-list flex flex-row justify-between mb-10">
        <h1 class="text-3xl font-bold underline">Liste profils</h1>

        <button type="button" class="float-left text-white bg-blue-700 hover:bg-blue-800 font-medium rounded-lg text-xl px-5 py-2.5 me-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700">
            <a href="{{ path('admin_profil_new') }}">Cr√©er un profil</a>
        </button>
    </div>

    <table class="table-auto w-full">
        <thead>
            <tr>
                <th class="p-2.5">Id</th>
                <th class="p-2.5">Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for profil in profils %}
                <tr>
                    <td class="border border-slate-700 p-2.5 dark:border-gray-700 text-center">{{ profil.id }}</td>
                    <td class="border border-slate-700 p-2.5 dark:border-gray-700 text-center">{{ profil.name }}</td>
                    <td class="text-left pl-5">
                        <button type="button" class="text-white bg-gray-800 hover:bg-gray-900 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-gray-800 dark:hover:bg-gray-700 dark:border-gray-700">
                            <a href="{{ path('admin_profil_update', {id: profil.id}) }}">Modifier</a> 
                        </button>
                        <button type="button" class="text-white bg-red-700 hover:bg-red-800 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-red-600 dark:hover:bg-red-700">
                            <a href="{{ path('admin_profil_delete', {id: profil.id}) }}">Supprimer</a>
                        </button>
                    <td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}