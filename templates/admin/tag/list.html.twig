{% extends "layout/base_layout.html.twig" %}

{% block content %}

    <h1>Liste tags</h1>
    <a href="{{ path('admin_tag_new') }}">Cr√©er un tag</a>

    <table>
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            {% for tag in tags %}
                <tr>
                    <td>{{ tag.id }}</td>
                    <td>{{ tag.name }}</td>
                    <td>
                        <a href="{{ path('admin_tag_update', {id: tag.id}) }}">Modifier</a> 
                        | 
                        <a href="{{ path('admin_tag_delete', {id: tag.id}) }}">Supprimer</a>
                    <td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}